{
  "name": "mittelgrau-kirby",
  "version": "1.0.0",
  "description": "Personal starterkit for Kirby, TailwindCss & Parcel",
  "main": "index.js",
  "scripts": {
    "assets": "export PARCEL_NOTIFIER_LEVEL=error && parcel watch ./src/main.js --out-dir ./assets/ --public-url . --no-cache --no-source-maps",
    "serve": "browser-sync start -c 'browsersync.config.js'",
    "dev": "concurrently 'npm run assets' 'npm run serve' ",
    "build": "parcel build ./src/main.js --out-dir ./assets/ --public-url . --no-cache --no-source-maps"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@tailwindcss/custom-forms": "^0.2.1",
    "autoprefixer": "^9.7.2",
    "babel-loader": "^8.0.6",
    "babel-polyfill": "^6.26.0",
    "browser-sync": "^2.26.7",
    "concurrently": "^5.0.0",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^4.1.10",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-notifier": "^1.0.0",
    "parcel-plugin-purgecss": "^2.1.3",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-nested": "^4.2.1",
    "postcss-preset-env": "^6.7.0",
    "postcss-purgecss": "^1.0.0",
    "tailwindcss": "^1.1.3"
  },
  "browserslist": [
    ">0.25%",
    "last 12 versions",
    "Firefox ESR",
    "not ie < 11"
  ],
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  }
}
